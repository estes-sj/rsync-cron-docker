# Cron schedule (standard crontab format)
SYNC_FREQUENCY="0 3 * * *"

# Pair 1
STORAGE_FROM_1="/host/path/to/source1"
STORAGE_TO_1="/host/path/to/dest1"

# Pair 2 (optional)
STORAGE_FROM_2="/host/path/to/source2"
STORAGE_TO_2="/host/path/to/dest2"

# Timezone
TZ="America/New_York"

# Optional healthcheck ping
HEALTHCHECK_PING_URL="https://example.com/health"

# Optional backrest reporter endpoint
BACKREST_REPORTER_URL="https://example.com/report"
BACKREST_API_KEY=your_backrest_api_key

# Optional nicknames for backrest reporter
STORAGE_REPO_1="dest_repo_nickname"
STORAGE_PLAN_1="plan_nickname"